<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CubicRoot" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
    </style>

    <style name="Theme.CubicRoot" parent="Base.Theme.CubicRoot" />

    <style name="Buttons" parent="Theme.CubicRoot">
        <item name="android:scaleType">fitCenter</item>
        <item name="cornerSizeTopRight">40%</item>
        <item name="cornerSizeTopLeft">40%</item>
        <item name="cornerSizeBottomRight">70%</item>
        <item name="cornerSizeBottomLeft">70%</item>

    </style>
    <style name="CalculatorImageButton" parent="Base.Theme.CubicRoot">
        <item name="android:padding">16dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="backgroundTint">#D0D0D0</item> </style>

</resources>